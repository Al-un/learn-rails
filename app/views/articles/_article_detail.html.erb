<h1>
  <%= article.name %>
</h1>

<p><%= article.description %></p>

<div class="button-row">
  <%= button_to edit_article_path(article), method: :get, remote: true do %>
      <span><i class="fas fa-edit"></i><%= t('form.edit') %></span>
  <% end %>
  <%= button_to article_path(article), 
      class: 'delete-button',
      method: :delete, 
      data: { confirm: t('form.delete_confirm') } do %>
      <span><i class="fas fa-trash"></i><%= t('form.delete') %></span>
  <% end %>
</div>