<h1>
  <%= catalog.code %> - <%= catalog.name %>
</h1>

<p><%= catalog.description %></p>

<div class="button-row">
  <%= button_to edit_catalog_path(catalog), method: 'get', remote: true do %>
    <span><i class="fas fa-edit"></i><%= t('form.edit') %></span>
  <% end %>
  <%= button_to catalog_path(catalog), 
      class: 'delete-button',
      method: :delete, 
      data: { confirm: t('form.delete_confirm') } do %>
      <span><i class="fas fa-trash"></i><%= t('form.delete') %></span>
  <% end %>
</div>