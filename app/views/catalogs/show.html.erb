<%# Catalog definition and edition buttons %>
<div id="entity">
  <%= render partial: 'catalogs/catalog_detail', locals: { catalog: @entity } %>
</div>

<%# Article publications definition %>
<div id="article_publications" class="card-container">
  <%= render @entity.article_publications %>
</div>

<%# Articles search to create article publication %>
<%= form_with url: search_articles_path, method: :get do |form| %>

  <%= form.label :name, "Search for:" %>
  <%= form.text_field :name %>

  <%= form.hidden_field :source_id, value: @entity.id %>
  <%= form.hidden_field :partial_path, value: 'catalogs/articles/searched' %>
  <%= form.submit "Search" %>

<% end %>

<div id="searched_articles"></div>